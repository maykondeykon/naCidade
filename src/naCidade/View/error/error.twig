{% extends 'layouts/base.twig' %}
{% block content %}
    {% if titulo %}
        <div class="alert {{ tipo }}" role="alert">
            <h2><span class="glyphicon {{ icon }}"></span> {{ titulo|e }}</h2>
        </div>
    {% endif %}

    <div class="alert alert-warning" role="alert">
        {{ message|e }}
    </div>

    <a class="btn btn-primary" href="{{btVoltar|default('/')}}">Voltar</a>
{% endblock %}
